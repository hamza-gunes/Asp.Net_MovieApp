@model Movie

<!DOCTYPE html>
<html lang="en">
<head>
    <title></title>
    <link href="/css/style.css" rel="stylesheet" />
</head>


<body>
    <h1>Film Listesi</h1>
    <div class="filmler">


        <div class="film">
            <p>@Model.Title</p>
            <p>@Model.Description</p>
            <p>@Model.Director</p>
            <p>
                <ul>
                    @foreach (var player in Model.Players)
                    {
                        <li>@player</li>
                    }
                </ul>
            </p>
        </div>
    
    
    </div>
</body>
</html>